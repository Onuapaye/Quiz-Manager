package fr.fortress.quizmanager.web.home;

import java.io.IOException;

import javax.inject.Inject;
import javax.servlet.ServletException;
import javax.servlet.http.HttpServlet;
import javax.servlet.http.HttpServletRequest;
import javax.servlet.http.HttpServletResponse;

import fr.fortress.quizmanager.services.LoginService;

/**
 * Servlet implementation class LoginServlet
 */
public class LoginServlet extends SpringServlet {
	private static final long serialVersionUID = 1L;

	// private LoginService loginService = new LoginService();

	@Inject
	LoginService loginService;

	/**
	 * @see HttpServlet#HttpServlet()
	 */
	public LoginServlet() {
		super();
	}

	/**
	 * @see HttpServlet#doGet(HttpServletRequest request, HttpServletResponse
	 *      response)
	 */
	protected void doGet(HttpServletRequest request, HttpServletResponse response)
			throws ServletException, IOException {

		// response.getWriter().append("Served at: ").append(request.getContextPath());
		//request.getRequestDispatcher("/WEB-INF/views/login.jsp").forward(request, response);
	}

	/**
	 * @see HttpServlet#doPost(HttpServletRequest request, HttpServletResponse response)
	 */
	protected void doPost(HttpServletRequest request, HttpServletResponse response) throws ServletException, IOException {
		
		//doGet(request, response);
		
		String userName = request.getParameter("username");
		String userPassword = request.getParameter("pass");
		String isUserStudent = request.getParameter("userIsStudent");

		boolean isUserValid = loginService.isUserAuthenticated(userName, userPassword);
		
		if (isUserStudent == null) {
			
			if (isUserValid) {

				request.getSession().setAttribute("userName", userName.toUpperCase());
				System.out.println(userName + "--"+ userPassword);
				//request.getSession().setAttribute("userPassword", userPassword);
			
				response.sendRedirect("home");
			} else {
				request.setAttribute("errorMessage", "Invalid Username or Password entered.");
				request.getRequestDispatcher("/WEB-INF/views/login.jsp").forward(request, response);
			} 
			
		} else { //if user is a student, validate f
			
		}
		
	}

}
